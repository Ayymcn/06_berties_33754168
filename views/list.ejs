<!DOCTYPE html>
<html>
    <head>
        <title>Welcome to <%=shopData.shopName%></title>
        <link rel="stylesheet"  type="text/css" href="/main.css" />
        <!-- adding style block to delete button next to every item--> 
        <style>
            li {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 10px;
            }
        </style>
    </head>
    <body>
        <div class="container">
    <nav>
        <p>
            <a href="<%= baseUrl %>/">Home</a> | 
            <a href="<%= baseUrl %>/about">About</a> | 
            <a href="<%= baseUrl %>/books/search">Search</a> | 
            <a href="<%= baseUrl %>/users/register">Register</a> | 
            <a href="<%= baseUrl %>/books/addbook">Add Book</a> | 
            <a href="<%= baseUrl %>/books/list">List Books</a> |
            <a href="<%= baseUrl %>/books/bargainbooks">Bargain Books</a>
        </p>
    </nav>
    <hr>
        <h1>Bertie's Books Shop</h1>
        <p>Here are the books that we sell:</p>
        <ul>
            <% availableBooks.forEach(function(book) { %>
                <li>
                    <%= book.name %> Â£; <%= book.price %>
                    <form action="<%= baseUrl %>/books/delete" method="post" style="margin:0;">
                        <input type="hidden" name="bookId" value="<%= book.id %>">
                        <input type="submit" value="Delete" style="background-color: #0b08dd;">
                    </form>
                </li>
            <% }); %>
        </ul>
    </body>        
</html>